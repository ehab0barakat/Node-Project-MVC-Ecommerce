

<%- include('./include/header.ejs'); %>

  <div class="container">
    <h2 style="padding: 10px; text-align: center;">Products Details</h2>

    <div class="card-group">
      <% products.forEach(function(result){ %>
        <div style="text-align: center;">

          <a href="/description/<%= result.ID %>"><img src="<%= result.image %>" class="card-img-top" alt="..."></a>
          <div class="card-body">
            <h5 class="card-title">
              <%= result.name %>
            </h5>

            <p class="card-text">
              Price: <%= result.price %>
            </p>
            <p class="card-text">
              <%= result.description%>
            </p>

            <a href="/add_to_cart/<%= result.ID %>" class=" btn-primary><i class=" fa fa-cart-plus"
              aria-hidden="true"></i> Add to cart</a>
            <!-- <form action="/cart/<%= result.ID %>"  method="post"> -->
            <input type="hidden" name="prd_id" value="<%= result.ID %>">
            </form>
          </div>
        </div>
        <% }); %>
    </div>

  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  <script src="../index.js"></script>